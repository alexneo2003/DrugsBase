
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"

            tools:context="com.alexneo.drugsbase.DrugDetailsActivity">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/lsd"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <!-- С тенькой лучше, правда?)
                галимо как-то, потом надо придумать как ценник лучше поставить
             -->

            <View
                android:background="@drawable/text_protector_shadow"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/price"
                android:layout_above="@+id/title"
                android:text="$100"
                android:textSize="14sp"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="-12dp"
                android:padding="5dp"
                android:background="@drawable/price_background"
                android:textColor="#555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/addiction"
                android:layout_above="@+id/title"
                android:layout_toRightOf="@+id/price"
                android:text="Сильная зависимость"
                android:textColor="#fff"
                android:layout_marginBottom="-12dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_margin="16dp"
                android:textColor="#fff"
                android:layout_alignParentBottom="true"
                android:id="@+id/title"
                android:text="@string/drug_item_title"
                android:textSize="35sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <TextView
            android:id="@+id/description"
            android:text="Some drug description"
            android:textColor="#444"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="16dp"
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/usage"
            android:textColor="#444"
            android:text="Some drug usage text"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="16dp"
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/affect"
            android:textColor="#444"
            android:text="Some drug affect"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>

